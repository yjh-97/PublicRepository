<mapper namespace="com.store.Dao.SettingMapper">
  	<!--  修改用户密码-->
  	<update id="updatePassword">
  		update t_user set password=#{newpass} where id=#{id} and password=#{oldpass} 
  	</update>
  	
  	
  	
  	<!--  修改用户密码-->
  	<update id="updateName">
  		update t_user set name=#{name} where id=#{id}
  	</update>
  	
  	
  	
</mapper>